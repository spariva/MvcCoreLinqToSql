@model List<Empleado>

<h1>Buscador Empleados</h1>
<form method="post">
    <label>Oficio</label>
    <input type="text" name="oficio" class="form-control"/>
    <label>Salario</label>
    <input type="text" name="salario" class="form-control" />
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<h2>
    @ViewBag.Mensaje
</h2>

@if(Model != null){
    <table class="table table-bordered table-success table-striped">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
                <th>Salario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model)
            {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                    <td><a asp-controller="Empleados" asp-action="Details" asp-route-id="@emp.IdEmpleado">Detalle</a></td>
                </tr>
            }
        </tbody>
    </table>
}